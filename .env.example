# Environment variables for API access
PLESK_SERVER_URL=https://your-plesk-server.com:8443

# Plesk Authentication - Choose ONE method:
# Method 1: API Key (for REST API)
PLESK_API_KEY=your-plesk-api-key

# Method 2: Username/Password (for XML API - RECOMMENDED)
PLESK_USERNAME=admin
PLESK_PASSWORD=your-admin-password

# Plesk SSH Access (for enhanced functionality)
PLESK_SSH_HOSTNAME=your-plesk-server.com
PLESK_SSH_USERNAME=root
PLESK_SSH_KEY_PATH=/path/to/your/private/key
# Alternative to SSH key:
PLESK_SSH_PASSWORD=your-ssh-password

POWERDNS_SERVER_URL=http://your-powerdns-server:8081
POWERDNS_API_KEY=your-powerdns-api-key

# Optional: Default zone for PowerDNS operations
DEFAULT_ZONE=example.com
